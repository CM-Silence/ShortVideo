<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.shortvideo.bean.AttentionFrgRecommendBean.Data" />
    </data>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/white_round">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/view_shapeableIv_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="2dp"
            app:shapeAppearance="@style/style_avatar"
            android:src="@color/transparent" />

        <TextView
            android:id="@+id/view_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{data.nickname}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:ellipsize="end"
            android:lines="1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/view_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{data.getNum()}"
            android:textSize="18sp"
            android:lines="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:background="@{data.getAttentionBackground()}"
            android:text="@{data.getAttentionText()"
            android:textSize="20sp"
            android:textColor="@{data.getAttentionColor()"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</layout>



